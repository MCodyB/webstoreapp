<%= form_for @user do |f| %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <br>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <br>

  <%= f.submit "Create my account" %>
<% end %>